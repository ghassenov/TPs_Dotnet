@model MoviesCrudApp.Models.ViewModels.MovieListViewModel

@{
    ViewData["Title"] = "Films";
}

<h1>Liste des Films</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Créer un nouveau film</a>
</p>

<!-- Formulaire de recherche -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" class="form-control" name="searchString" value="@Model.CurrentFilter" placeholder="Rechercher un film..." />
        <button type="submit" class="btn btn-outline-secondary">Rechercher</button>
        <a asp-action="Index" class="btn btn-outline-dark">Effacer</a>
    </div>
</form>

<!-- Tableau avec tri -->
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                <a asp-action="Index" 
                   asp-route-sortBy="Title" 
                   asp-route-sortOrder="@(Model.SortBy == "Title" && Model.SortOrder == "asc" ? "desc" : "asc")"
                   asp-route-searchString="@Model.CurrentFilter"
                   class="text-white text-decoration-none">
                    Titre
                    @if (Model.SortBy == "Title")
                    {
                        <span>@(Model.SortOrder == "asc" ? "↑" : "↓")</span>
                    }
                </a>
            </th>
            <th>Description</th>
            <th>
                <a asp-action="Index" 
                   asp-route-sortBy="Genre" 
                   asp-route-sortOrder="@(Model.SortBy == "Genre" && Model.SortOrder == "asc" ? "desc" : "asc")"
                   asp-route-searchString="@Model.CurrentFilter"
                   class="text-white text-decoration-none">
                    Genre
                    @if (Model.SortBy == "Genre")
                    {
                        <span>@(Model.SortOrder == "asc" ? "↑" : "↓")</span>
                    }
                </a>
            </th>
            <th>
                <a asp-action="Index" 
                   asp-route-sortBy="ReleaseDate" 
                   asp-route-sortOrder="@(Model.SortBy == "ReleaseDate" && Model.SortOrder == "asc" ? "desc" : "asc")"
                   asp-route-searchString="@Model.CurrentFilter"
                   class="text-white text-decoration-none">
                    Date de Sortie
                    @if (Model.SortBy == "ReleaseDate")
                    {
                        <span>@(Model.SortOrder == "asc" ? "↑" : "↓")</span>
                    }
                </a>
            </th>
            <th>
                <a asp-action="Index" 
                   asp-route-sortBy="Rating" 
                   asp-route-sortOrder="@(Model.SortBy == "Rating" && Model.SortOrder == "asc" ? "desc" : "asc")"
                   asp-route-searchString="@Model.CurrentFilter"
                   class="text-white text-decoration-none">
                    Note
                    @if (Model.SortBy == "Rating")
                    {
                        <span>@(Model.SortOrder == "asc" ? "↑" : "↓")</span>
                    }
                </a>
            </th>
            <th>
                <a asp-action="Index" 
                   asp-route-sortBy="Duration" 
                   asp-route-sortOrder="@(Model.SortBy == "Duration" && Model.SortOrder == "asc" ? "desc" : "asc")"
                   asp-route-searchString="@Model.CurrentFilter"
                   class="text-white text-decoration-none">
                    Durée
                    @if (Model.SortBy == "Duration")
                    {
                        <span>@(Model.SortOrder == "asc" ? "↑" : "↓")</span>
                    }
                </a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>@Html.DisplayFor(modelItem => item.Duration) min</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Détails</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (Model.PagingInfo.TotalPages > 1)
{
    <nav aria-label="Pagination">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                    <a class="page-link" 
                       asp-action="Index"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-searchString="@Model.CurrentFilter"
                       asp-route-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}

<!-- Informations de pagination -->
<div class="text-center text-muted">
    Page @Model.PagingInfo.CurrentPage sur @Model.PagingInfo.TotalPages 
    - @Model.PagingInfo.TotalItems film(s) au total
</div>