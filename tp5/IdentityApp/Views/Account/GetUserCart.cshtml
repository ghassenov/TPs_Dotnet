@model IEnumerable<IdentityApp.Models.PanierParUser>

@{
    ViewData["Title"] = "My Shopping Cart";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal total = 0;
                }
                @foreach (var item in Model)
                {
                    if (item.Produit != null)
                    {
                        decimal subtotal = item.Produit.Price * item.Quantity;
                        total += subtotal;
                        <tr>
                            <td>@item.Produit.Name</td>
                            <td>@item.Produit.Price.ToString("C")</td>
                            <td>@item.Quantity</td>
                            <td>@subtotal.ToString("C")</td>
                            <td>
                                <form method="post" action="@Url.Action("RemoveFromCart")" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                <tr class="table-info">
                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                    <td><strong>@total.ToString("C")</strong></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>Your cart is empty.</p>
    </div>
}

<div class="mt-3">
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
    <a href="@Url.Action("Profile")" class="btn btn-secondary">View Profile</a>
</div>
