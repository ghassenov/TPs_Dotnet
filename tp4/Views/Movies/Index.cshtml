@model MovieListViewModel
@using MoviesCrudApp.Models.ViewModels

@{
    ViewData["Title"] = "Liste des Films";
}

<div class="modern-container">
    <!-- Header & Add Movie Button -->
    <div class="modern-header-row">
        <div class="modern-header-content">
            <h1 class="modern-title">üé¨ @ViewData["Title"]</h1>
        </div>
        <div class="modern-header-action">
            <a asp-action="Create" class="modern-btn modern-btn-primary">
                <svg class="modern-btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 4v16m8-8H4"/>
                </svg>
                Ajouter un Film
            </a>
        </div>
    </div>

    <!-- Validation Errors -->
    @if (ViewBag.Errors != null && ((List<string>)ViewBag.Errors).Count > 0)
    {
        <div class="modern-alert modern-alert-error">
            <div class="modern-alert-header">
                <svg class="modern-alert-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.694-.833-2.464 0L4.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                </svg>
                <span>Erreurs</span>
            </div>
            <ul class="modern-alert-list">
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    <!-- Search & Sort -->
    <div class="modern-card">
        <form asp-action="Index" method="get" class="modern-search-form">
            <div class="modern-search-grid">
                <div class="modern-form-group">
                    <label class="modern-form-label">Rechercher un film</label>
                    <input type="text" 
                           name="searchString" 
                           class="modern-input modern-search-input" 
                           placeholder="Titre, description ou genre..." 
                           value="@Model.SearchString" />
                </div>

                <div class="modern-form-group">
                    <label class="modern-form-label">Trier par</label>
                    <select name="sortBy" class="modern-select modern-sort-select">
                        <option value="Title" selected="@(Model.SortBy == "Title")">Titre</option>
                        <option value="ReleaseDate" selected="@(Model.SortBy == "ReleaseDate")">Date de Sortie</option>
                        <option value="Rating" selected="@(Model.SortBy == "Rating")">Note</option>
                    </select>
                </div>
            </div>

            <div class="modern-search-actions">
                <button type="submit" class="modern-btn modern-btn-info">
                    <svg class="modern-btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    Rechercher
                </button>
                <a href="@Url.Action("Index")" class="modern-btn modern-btn-secondary">
                    R√©initialiser
                </a>
            </div>
        </form>
    </div>

    <!-- Movies Grid -->
    @if (Model.Movies != null && Model.Movies.Count > 0)
    {
        <div class="modern-movie-grid">
            @foreach (var movie in Model.Movies)
            {
                <div class="modern-movie-card">
                    <!-- Movie Image -->
                    <div class="modern-movie-image-container">
                        @if (!string.IsNullOrEmpty(movie.ImageFile))
                        {
                            <img src="~/images/@movie.ImageFile" 
                                 class="modern-movie-image" 
                                 alt="@movie.Title" />
                        }
                        else
                        {
                            <div class="modern-movie-image-placeholder">
                                <svg class="modern-placeholder-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                            </div>
                        }
                    </div>

                    <!-- Movie Content -->
                    <div class="modern-movie-content">
                        <h3 class="modern-movie-title">@movie.Title</h3>
                        
                        <div class="modern-movie-meta">
                            <div class="modern-movie-meta-item">
                                <span class="modern-movie-label">Genre</span>
                                <span class="modern-tag">@movie.Genre?.Name</span>
                            </div>
                            
                            <div class="modern-movie-meta-item">
                                <span class="modern-movie-label">Note</span>
                                <span class="modern-tag modern-tag-success">‚≠ê @movie.Rating/10</span>
                            </div>
                            
                            <div class="modern-movie-meta-item">
                                <span class="modern-movie-label">Sortie</span>
                                <span class="modern-movie-value">@movie.ReleaseDate.ToString("dd/MM/yyyy")</span>
                            </div>
                            
                            <div class="modern-movie-meta-item">
                                <span class="modern-movie-label">Dur√©e</span>
                                <span class="modern-movie-value">@movie.Duration min</span>
                            </div>

                            <div class="modern-movie-meta-item">
                                <span class="modern-movie-label">Stock</span>
                                <span class="modern-movie-value">@movie.Stock</span>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="modern-movie-description">
                            @movie.Description
                        </div>

                        <!-- Action Buttons -->
                        <div class="modern-movie-actions">
                            <a asp-action="Details" asp-route-id="@movie.Id" class="modern-action-btn modern-action-info">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                                D√©tails
                            </a>
                            <a asp-action="Edit" asp-route-id="@movie.Id" class="modern-action-btn modern-action-edit">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                Modifier
                            </a>
                            <a asp-action="Delete" asp-route-id="@movie.Id" class="modern-action-btn modern-action-delete">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                                Supprimer
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <div class="modern-pagination">
            <a class="modern-pagination-btn @(Model.CurrentPage == 1 ? "modern-pagination-disabled" : "")"
               href="@Url.Action("Index", new { page = Model.CurrentPage - 1, sortBy = Model.SortBy, searchString = Model.SearchString })">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M15 19l-7-7 7-7"/>
                </svg>
                Pr√©c√©dent
            </a>

            <div class="modern-pagination-numbers">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a class="modern-pagination-number @(i == Model.CurrentPage ? "modern-pagination-active" : "")"
                       href="@Url.Action("Index", new { page = i, sortBy = Model.SortBy, searchString = Model.SearchString })">
                        @i
                    </a>
                }
            </div>

            <a class="modern-pagination-btn @(Model.CurrentPage == Model.TotalPages ? "modern-pagination-disabled" : "")"
               href="@Url.Action("Index", new { page = Model.CurrentPage + 1, sortBy = Model.SortBy, searchString = Model.SearchString })">
                Suivant
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    }
    else
    {
        <div class="modern-empty-state">
            <svg class="modern-empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
            </svg>
            <h3 class="modern-empty-title">Aucun film trouv√©</h3>
            <p class="modern-empty-description">Commencez par cr√©er votre premier film</p>
            <a asp-action="Create" class="modern-btn modern-btn-primary modern-btn-empty">
                Ajouter un Film
            </a>
        </div>
    }
</div>

@section Styles {
    <style>
        /* Using the same design system */
        :root {
            --primary: #4361ee;
            --primary-light: #eef2ff;
            --secondary: #64748b;
            --success: #10b981;
            --error: #ef4444;
            --warning: #f59e0b;
            --info: #0ea5e9;
            --surface: #ffffff;
            --background: #f8fafc;
            --border: #e2e8f0;
            --text: #1e293b;
            --text-light: #64748b;
            --radius: 16px;
            --radius-sm: 8px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 8px 40px rgba(0, 0, 0, 0.12);
            --transition: all 0.3s ease;
        }

        .modern-container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        /* Header */
        .modern-header-row {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 2.5rem;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .modern-header-content {
            flex: 1;
            min-width: 300px;
        }

        .modern-header-action {
            flex-shrink: 0;
        }

        .modern-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Search Form */
        .modern-card {
            background: var(--surface);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 2rem;
            margin-bottom: 2rem;
            border: 1px solid var(--border);
        }

        .modern-search-form {
            width: 100%;
        }

        .modern-search-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        @@media (max-width: 768px) {
            .modern-search-grid {
                grid-template-columns: 1fr;
            }
        }

        .modern-search-input {
            width: 100%;
        }

        .modern-sort-select {
            width: 100%;
        }

        .modern-search-actions {
            display: flex;
            gap: 1rem;
        }

        @@media (max-width: 640px) {
            .modern-search-actions {
                flex-direction: column;
            }
        }

        .modern-btn-info {
            background: linear-gradient(135deg, var(--info) 0%, #0284c7 100%);
            color: white;
        }

        .modern-btn-info:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(14, 165, 233, 0.3);
        }

        /* Movie Grid */
        .modern-movie-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        @@media (max-width: 768px) {
            .modern-movie-grid {
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
                gap: 1.5rem;
            }
        }

        /* Movie Card */
        .modern-movie-card {
            background: var(--surface);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            overflow: hidden;
            border: 1px solid var(--border);
            transition: var(--transition);
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .modern-movie-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-hover);
        }

        /* Movie Image */
        .modern-movie-image-container {
            position: relative;
            width: 100%;
            height: 250px;
            overflow: hidden;
        }

        .modern-movie-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .modern-movie-card:hover .modern-movie-image {
            transform: scale(1.05);
        }

        .modern-movie-image-placeholder {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--background) 0%, #e2e8f0 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .modern-placeholder-icon {
            width: 64px;
            height: 64px;
            color: var(--text-light);
            opacity: 0.5;
        }

        /* Movie Content */
        .modern-movie-content {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .modern-movie-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 1rem;
            line-height: 1.3;
        }

        /* Movie Meta */
        .modern-movie-meta {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .modern-movie-meta-item {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .modern-movie-label {
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--text-light);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .modern-movie-value {
            font-size: 0.875rem;
            color: var(--text);
            font-weight: 500;
        }

        /* Description */
        .modern-movie-description {
            color: var(--text);
            line-height: 1.5;
            font-size: 0.875rem;
            margin-bottom: 1.5rem;
            flex-grow: 1;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        /* Action Buttons */
        .modern-movie-actions {
            display: flex;
            gap: 0.5rem;
        }

        .modern-action-btn {
            flex: 1;
            padding: 0.625rem 0.75rem;
            border-radius: var(--radius-sm);
            font-size: 0.75rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.375rem;
            text-decoration: none;
            text-align: center;
        }

        .modern-action-btn svg {
            width: 1rem;
            height: 1rem;
        }

        .modern-action-info {
            background: transparent;
            border: 2px solid var(--info);
            color: var(--info);
        }

        .modern-action-info:hover {
            background: var(--info);
            color: white;
            transform: translateY(-2px);
        }

        .modern-action-edit {
            background: transparent;
            border: 2px solid var(--warning);
            color: var(--warning);
        }

        .modern-action-edit:hover {
            background: var(--warning);
            color: white;
            transform: translateY(-2px);
        }

        .modern-action-delete {
            background: transparent;
            border: 2px solid var(--error);
            color: var(--error);
        }

        .modern-action-delete:hover {
            background: var(--error);
            color: white;
            transform: translateY(-2px);
        }

        /* Tags */
        .modern-tag {
            display: inline-block;
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            color: white;
        }

        .modern-tag-success {
            background: linear-gradient(135deg, var(--success) 0%, #0d9c6e 100%);
        }

        /* Pagination */
        .modern-pagination {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            margin-top: 2.5rem;
            flex-wrap: wrap;
        }

        .modern-pagination-btn {
            padding: 0.75rem 1.5rem;
            border-radius: var(--radius-sm);
            background: var(--surface);
            color: var(--text);
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--border);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: var(--transition);
        }

        .modern-pagination-btn:hover:not(.modern-pagination-disabled) {
            border-color: var(--primary);
            color: var(--primary);
            transform: translateY(-1px);
        }

        .modern-pagination-btn svg {
            width: 1.25rem;
            height: 1.25rem;
        }

        .modern-pagination-disabled {
            opacity: 0.5;
            cursor: not-allowed;
            pointer-events: none;
        }

        .modern-pagination-numbers {
            display: flex;
            gap: 0.5rem;
        }

        .modern-pagination-number {
            width: 2.5rem;
            height: 2.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: var(--radius-sm);
            background: var(--surface);
            color: var(--text);
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--border);
            transition: var(--transition);
        }

        .modern-pagination-number:hover:not(.modern-pagination-active) {
            border-color: var(--primary);
            color: var(--primary);
        }

        .modern-pagination-active {
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            color: white;
            border-color: var(--primary);
        }

        /* Empty State */
        .modern-empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: var(--surface);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
        }

        .modern-empty-icon {
            width: 64px;
            height: 64px;
            color: var(--primary);
            margin-bottom: 1.5rem;
            opacity: 0.6;
        }

        .modern-empty-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text);
            margin-bottom: 0.5rem;
        }

        .modern-empty-description {
            color: var(--text-light);
            margin-bottom: 2rem;
            font-size: 1.125rem;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

        .modern-btn-empty {
            padding: 0.875rem 2.5rem;
        }

        /* Buttons */
        .modern-btn {
            padding: 0.875rem 2rem;
            border-radius: var(--radius-sm);
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .modern-btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            color: white;
        }

        .modern-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(67, 97, 238, 0.3);
        }

        .modern-btn-secondary {
            background: transparent;
            color: var(--text-light);
            border: 2px solid var(--border);
        }

        .modern-btn-secondary:hover {
            background: var(--background);
            border-color: var(--text-light);
        }

        .modern-btn-icon {
            width: 1.25rem;
            height: 1.25rem;
        }

        /* Alerts */
        .modern-alert {
            border-radius: var(--radius);
            padding: 1.25rem;
            margin-bottom: 2rem;
            animation: slideIn 0.3s ease;
        }

        .modern-alert-error {
            background: linear-gradient(135deg, #fef2f2 0%, #fee 100%);
            border: 1px solid #fecaca;
        }

        .modern-alert-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
            font-weight: 600;
            color: var(--error);
        }

        .modern-alert-icon {
            width: 1.5rem;
            height: 1.5rem;
        }

        .modern-alert-list {
            margin: 0;
            padding-left: 1.5rem;
            color: var(--text);
        }

        .modern-alert-list li {
            margin-bottom: 0.25rem;
        }

        /* Animations */
        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .modern-header-row {
                flex-direction: column;
                align-items: stretch;
            }

            .modern-header-action {
                width: 100%;
            }

            .modern-title {
                font-size: 2rem;
            }

            .modern-movie-grid {
                grid-template-columns: 1fr;
            }

            .modern-movie-meta {
                grid-template-columns: 1fr;
            }

            .modern-pagination {
                flex-direction: column;
            }

            .modern-pagination-numbers {
                flex-wrap: wrap;
                justify-content: center;
            }
        }

        @@media (max-width: 480px) {
            .modern-container {
                padding: 0 1rem;
            }

            .modern-title {
                font-size: 1.75rem;
            }

            .modern-card {
                padding: 1.5rem;
            }

            .modern-movie-actions {
                flex-direction: column;
            }

            .modern-action-btn {
                width: 100%;
            }
        }
    </style>
}