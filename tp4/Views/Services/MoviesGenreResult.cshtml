@model List<MoviesCrudApp.Services.MovieGenreDTO>

@{
    ViewData["Title"] = ViewBag.Title ?? "Films avec Genres";
}

<div class="modern-container">
    <!-- Header -->
    <div class="modern-result-header">
        <a href="@Url.Action("Index", "Services")" class="modern-back-link">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M15 19l-7-7 7-7"/>
            </svg>
            Retour aux Services
        </a>
        <h1 class="modern-result-title">@ViewBag.Title</h1>
        <p class="modern-result-description">@ViewBag.Description</p>
    </div>

    <!-- Results -->
    @if (Model != null && Model.Count > 0)
    {
        <div class="modern-card modern-results-card">
            <div class="modern-card-header">
                <h2 class="modern-card-title">
                    <span class="modern-result-badge">@Model.Count</span>
                    Films Trouv√©s
                </h2>
            </div>

            <div class="modern-genre-list">
                @foreach (var item in Model)
                {
                    <div class="modern-genre-item">
                        <div class="modern-genre-icon">üé¨</div>
                        <div class="modern-genre-content">
                            <div class="modern-genre-display">
                                @item.Display
                            </div>
                            <div class="modern-genre-details">
                                <span class="modern-genre-meta">ID: @item.MovieId</span>
                                <span class="modern-genre-meta">‚Ä¢</span>
                                <span class="modern-genre-tag">@item.GenreName</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="modern-empty-state">
            <svg class="modern-empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3>Aucun r√©sultat</h3>
            <p>Aucun film ne correspond √† vos crit√®res.</p>
        </div>
    }

    <!-- Query Info -->
    <div class="modern-card modern-query-info">
        <div class="modern-card-header">
            <h3 class="modern-card-title">üìù Requ√™te LINQ Ex√©cut√©e</h3>
        </div>
        <div class="modern-query-code">
            <pre>var moviesGenres = await _context.Movies
    .Include(m => m.Genre)
    .Select(m => new MovieGenreDTO
    {
        MovieId = m.Id,
        MovieTitle = m.Title,
        GenreName = m.Genre.Name,
        Display = m.Title + " - " + m.Genre.Name
    })
    .ToListAsync();</pre>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --primary: #4361ee;
            --primary-light: #eef2ff;
            --secondary: #64748b;
            --surface: #ffffff;
            --background: #f8fafc;
            --border: #e2e8f0;
            --text: #1e293b;
            --text-light: #64748b;
            --radius: 12px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --transition: all 0.2s ease;
        }

        .modern-container {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .modern-result-header {
            margin-bottom: 2rem;
        }

        .modern-back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
            margin-bottom: 1rem;
            transition: var(--transition);
        }

        .modern-back-link:hover {
            gap: 1rem;
        }

        .modern-back-link svg {
            width: 20px;
            height: 20px;
        }

        .modern-result-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text);
            margin: 1rem 0 0.5rem 0;
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .modern-result-description {
            color: var(--text-light);
            font-size: 1rem;
            margin: 0.5rem 0 0 0;
        }

        .modern-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
        }

        .modern-card-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border);
        }

        .modern-card-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .modern-result-badge {
            background: var(--primary);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 700;
        }

        .modern-genre-list {
            display: flex;
            flex-direction: column;
            gap: 0;
        }

        .modern-genre-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--border);
            transition: var(--transition);
        }

        .modern-genre-item:last-child {
            border-bottom: none;
        }

        .modern-genre-item:hover {
            background: var(--primary-light);
        }

        .modern-genre-icon {
            font-size: 2rem;
            flex-shrink: 0;
        }

        .modern-genre-content {
            flex: 1;
        }

        .modern-genre-display {
            font-size: 1.1rem;
            font-weight: 500;
            color: var(--text);
            margin-bottom: 0.5rem;
        }

        .modern-genre-details {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.85rem;
        }

        .modern-genre-meta {
            color: var(--text-light);
        }

        .modern-genre-tag {
            background: var(--primary-light);
            color: var(--primary);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-weight: 500;
        }

        .modern-empty-state {
            text-align: center;
            padding: 3rem 2rem;
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
        }

        .modern-empty-icon {
            width: 64px;
            height: 64px;
            color: var(--secondary);
            margin: 0 auto 1rem;
            opacity: 0.5;
        }

        .modern-empty-state h3 {
            font-size: 1.3rem;
            color: var(--text);
            margin: 0 0 0.5rem 0;
        }

        .modern-empty-state p {
            color: var(--text-light);
            margin: 0;
        }

        .modern-query-info {
            background: #1e293b;
            border-color: #334155;
        }

        .modern-query-info .modern-card-header {
            border-bottom-color: #334155;
        }

        .modern-query-info .modern-card-title {
            color: #e2e8f0;
        }

        .modern-query-code {
            padding: 1.5rem;
        }

        .modern-query-code pre {
            margin: 0;
            padding: 1rem;
            background: #0f172a;
            border: 1px solid #334155;
            border-radius: 8px;
            color: #10b981;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            overflow-x: auto;
            line-height: 1.6;
        }

        @@media (max-width: 768px) {
            .modern-result-title {
                font-size: 1.5rem;
            }

            .modern-genre-item {
                gap: 0.75rem;
            }

            .modern-genre-icon {
                font-size: 1.5rem;
            }

            .modern-genre-display {
                font-size: 1rem;
            }
        }
    </style>
}
