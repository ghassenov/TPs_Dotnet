            transition: width 0.5s ease;
            min-width: 60px;
        }

        .modern-count-text {
            color: white;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .modern-ranking-footer {
            padding: 1rem 1.5rem;
            background: rgba(0, 0, 0, 0.02);
            border-top: 1px solid var(--border);
            display: flex;
            justify-content: flex-end;
        }

        .modern-count-badge {
            background: var(--primary);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 700;
            font-size: 1rem;
        }

        .modern-empty-state {
            text-align: center;
            padding: 3rem 2rem;
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
        }

        .modern-empty-icon {
            width: 64px;
            height: 64px;
            color: var(--secondary);
            margin: 0 auto 1rem;
            opacity: 0.5;
        }

        .modern-empty-state h3 {
            font-size: 1.3rem;
            color: var(--text);
            margin: 0 0 0.5rem 0;
        }

        .modern-empty-state p {
            color: var(--text-light);
            margin: 0;
        }

        .modern-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
        }

        .modern-card-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--border);
        }

        .modern-card-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text);
            margin: 0;
        }

        .modern-query-info {
            background: #1e293b;
            border-color: #334155;
        }

        .modern-query-info .modern-card-header {
            border-bottom-color: #334155;
        }

        .modern-query-info .modern-card-title {
            color: #e2e8f0;
        }

        .modern-query-code {
            padding: 1.5rem;
        }

        .modern-query-code pre {
            margin: 0;
            padding: 1rem;
            background: #0f172a;
            border: 1px solid #334155;
            border-radius: 8px;
            color: #10b981;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            overflow-x: auto;
            line-height: 1.6;
        }

        @@media (max-width: 768px) {
            .modern-result-title {
                font-size: 1.5rem;
            }

            .modern-ranking-header {
                gap: 0.75rem;
            }

            .modern-ranking-medal {
                font-size: 2rem;
            }

            .modern-genre-name {
                font-size: 1.2rem;
            }

            .modern-rank-number {
                font-size: 1.3rem;
            }
        }
    </style>
}
