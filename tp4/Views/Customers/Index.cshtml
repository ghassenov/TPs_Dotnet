@model CustomerListViewModel
@using MoviesCrudApp.Models.ViewModels

@{
    ViewData["Title"] = "Liste des Clients";
}

<div class="modern-container">
    <!-- Header -->
    <div class="modern-header-row">
        <div class="modern-header-content">
            <h1 class="modern-title">@ViewData["Title"]</h1>
            <p class="modern-subtitle">Gérez les clients enregistrés et leurs informations.</p>
        </div>
        <div class="modern-header-action">
            <a asp-action="Create" class="modern-btn modern-btn-primary">
                <svg class="modern-btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 4v16m8-8H4"/>
                </svg>
                Ajouter un Client
            </a>
        </div>
    </div>

    <!-- Errors -->
    @if (ViewBag.Errors != null && ((List<string>)ViewBag.Errors).Count > 0)
    {
        <div class="modern-alert modern-alert-error">
            <div class="modern-alert-header">
                <svg class="modern-alert-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.694-.833-2.464 0L4.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                </svg>
                <span>Erreurs</span>
            </div>
            <ul class="modern-alert-list">
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    <!-- Search -->
    <div class="modern-card">
        <form asp-action="Index" method="get" class="modern-search-form">
            <div class="modern-form-group">
                <label class="modern-form-label">Rechercher un client</label>
                <div class="modern-search-container">
                    <input type="text"
                           name="searchString"
                           class="modern-input modern-search-input"
                           placeholder="Nom, prénom ou email…"
                           value="@Model.SearchString" />
                    <button type="submit" class="modern-search-button">
                        <svg class="modern-search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        Rechercher
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Table -->
    @if (Model.Customers != null && Model.Customers.Count > 0)
    {
        <div class="modern-card">
            <div class="modern-table-container">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>Prénom</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Type</th>
                            <th>Réduction</th>
                            <th>Newsletter</th>
                            <th>Date d'inscription</th>
                            <th class="modern-table-actions">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            <tr class="modern-table-row">
                                <td class="modern-table-bold">@customer.FirstName</td>
                                <td>@customer.LastName</td>
                                <td>
                                    <a href="mailto:@customer.Email" class="modern-table-link">
                                        @customer.Email
                                    </a>
                                </td>
                                <td>@customer.Phone</td>
                                <td>
                                    <span class="modern-tag">
                                        @customer.MembershipType?.Name
                                    </span>
                                </td>
                                <td>
                                    <span class="modern-tag modern-tag-info">
                                        @customer.MembershipType?.DiscountRate%
                                    </span>
                                </td>
                                <td>
                                    @if (customer.IsSubscribedToNewsletter)
                                    {
                                        <span class="modern-tag modern-tag-success">✓ Oui</span>
                                    }
                                    else
                                    {
                                        <span class="modern-tag modern-tag-default">✕ Non</span>
                                    }
                                </td>
                                <td class="modern-table-date">
                                    @customer.RegistrationDate.ToString("dd/MM/yyyy")
                                </td>
                                <td class="modern-table-actions">
                                    <div class="modern-action-group">
                                        <a asp-action="Edit"
                                           asp-route-id="@customer.Id"
                                           class="modern-action-btn modern-action-edit"
                                           title="Modifier">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                                <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                            </svg>
                                        </a>
                                        <a asp-action="Delete"
                                           asp-route-id="@customer.Id"
                                           class="modern-action-btn modern-action-delete"
                                           title="Supprimer">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                                <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <div class="modern-pagination">
            <a class="modern-pagination-btn @(Model.CurrentPage == 1 ? "modern-pagination-disabled" : "")"
               href="@Url.Action("Index", new { page = Model.CurrentPage - 1, searchString = Model.SearchString })">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M15 19l-7-7 7-7"/>
                </svg>
                Précédent
            </a>

            <div class="modern-pagination-numbers">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a class="modern-pagination-number @(i == Model.CurrentPage ? "modern-pagination-active" : "")"
                       href="@Url.Action("Index", new { page = i, searchString = Model.SearchString })">
                        @i
                    </a>
                }
            </div>

            <a class="modern-pagination-btn @(Model.CurrentPage == Model.TotalPages ? "modern-pagination-disabled" : "")"
               href="@Url.Action("Index", new { page = Model.CurrentPage + 1, searchString = Model.SearchString })">
                Suivant
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    }
    else
    {
        <div class="modern-alert modern-alert-info">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M13 16h-1v-4h1m0-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Aucun client trouvé.</span>
        </div>
    }
</div>

@section Styles {
    <style>
        /* Using the same design system */
        :root {
            --primary: #4361ee;
            --primary-light: #eef2ff;
            --secondary: #64748b;
            --success: #10b981;
            --error: #ef4444;
            --warning: #f59e0b;
            --info: #0ea5e9;
            --info-light: #e0f2fe;
            --surface: #ffffff;
            --background: #f8fafc;
            --border: #e2e8f0;
            --table-border: #f1f5f9;
            --text: #1e293b;
            --text-light: #64748b;
            --radius: 12px;
            --radius-sm: 8px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.12);
            --transition: all 0.2s ease;
        }

        .modern-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .modern-header-row {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 2.5rem;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .modern-header-content {
            flex: 1;
            min-width: 300px;
        }

        .modern-header-action {
            flex-shrink: 0;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .modern-subtitle {
            font-size: 1.125rem;
            color: var(--text-light);
            line-height: 1.6;
            max-width: 600px;
        }

        .modern-card {
            background: var(--surface);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 2rem;
            margin-bottom: 1.5rem;
            border: 1px solid var(--border);
            transition: var(--transition);
        }

        .modern-card:hover {
            box-shadow: var(--shadow-hover);
        }

        /* Search Form */
        .modern-search-form {
            width: 100%;
        }

        .modern-search-container {
            display: flex;
            gap: 0.5rem;
            width: 100%;
        }

        .modern-search-input {
            flex: 1;
            min-width: 0;
        }

        .modern-search-button {
            padding: 0.875rem 1.5rem;
            background: linear-gradient(135deg, var(--info) 0%, #0284c7 100%);
            color: white;
            border: none;
            border-radius: var(--radius-sm);
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: var(--transition);
            white-space: nowrap;
        }

        .modern-search-button:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(14, 165, 233, 0.3);
        }

        .modern-search-icon {
            width: 1.25rem;
            height: 1.25rem;
        }

        /* Table */
        .modern-table-container {
            overflow-x: auto;
            border-radius: var(--radius-sm);
            border: 1px solid var(--border);
        }

        .modern-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 800px;
        }

        .modern-table thead {
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
        }

        .modern-table th {
            padding: 1rem 1.5rem;
            text-align: left;
            color: white;
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            border: none;
        }

        .modern-table td {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--table-border);
            color: var(--text);
        }

        .modern-table tbody tr:last-child td {
            border-bottom: none;
        }

        .modern-table-row:hover {
            background: var(--background);
        }

        .modern-table-bold {
            font-weight: 600;
            color: var(--text);
        }

        .modern-table-link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }

        .modern-table-link:hover {
            color: #3a56d4;
            text-decoration: underline;
        }

        .modern-table-date {
            color: var(--text-light);
            font-family: monospace;
            font-size: 0.875rem;
        }

        .modern-table-actions {
            width: 120px;
            text-align: center;
        }

        /* Tags */
        .modern-tag {
            display: inline-block;
            padding: 0.375rem 0.75rem;
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            color: white;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .modern-tag-info {
            background: linear-gradient(135deg, var(--info) 0%, #0284c7 100%);
        }

        /* Action Buttons */
        .modern-action-group {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }

        .modern-action-btn {
            width: 36px;
            height: 36px;
            border-radius: var(--radius-sm);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 2px solid transparent;
            transition: var(--transition);
            cursor: pointer;
            text-decoration: none;
        }

        .modern-action-btn svg {
            width: 1.125rem;
            height: 1.125rem;
        }

        .modern-action-edit {
            background: transparent;
            border-color: var(--warning);
            color: var(--warning);
        }

        .modern-action-edit:hover {
            background: var(--warning);
            color: white;
            transform: translateY(-2px);
        }

        .modern-action-delete {
            background: transparent;
            border-color: var(--error);
            color: var(--error);
        }

        .modern-action-delete:hover {
            background: var(--error);
            color: white;
            transform: translateY(-2px);
        }

        /* Pagination */
        .modern-pagination {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            margin-top: 2.5rem;
            flex-wrap: wrap;
        }

        .modern-pagination-btn {
            padding: 0.75rem 1.5rem;
            border-radius: var(--radius-sm);
            background: var(--surface);
            color: var(--text);
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--border);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: var(--transition);
        }

        .modern-pagination-btn:hover:not(.modern-pagination-disabled) {
            border-color: var(--primary);
            color: var(--primary);
            transform: translateY(-1px);
        }

        .modern-pagination-btn svg {
            width: 1.25rem;
            height: 1.25rem;
        }

        .modern-pagination-disabled {
            opacity: 0.5;
            cursor: not-allowed;
            pointer-events: none;
        }

        .modern-pagination-numbers {
            display: flex;
            gap: 0.5rem;
        }

        .modern-pagination-number {
            width: 2.5rem;
            height: 2.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: var(--radius-sm);
            background: var(--surface);
            color: var(--text);
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--border);
            transition: var(--transition);
        }

        .modern-pagination-number:hover:not(.modern-pagination-active) {
            border-color: var(--primary);
            color: var(--primary);
        }

        .modern-pagination-active {
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            color: white;
            border-color: var(--primary);
        }

        /* Alerts */
        .modern-alert {
            border-radius: var(--radius);
            padding: 1.25rem;
            margin-bottom: 1.5rem;
            animation: slideIn 0.3s ease;
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .modern-alert-error {
            background: linear-gradient(135deg, #fef2f2 0%, #fee 100%);
            border: 1px solid #fecaca;
        }

        .modern-alert-info {
            background: linear-gradient(135deg, var(--info-light) 0%, #e0f2fe 100%);
            border: 1px solid #bae6fd;
            color: var(--text);
        }

        .modern-alert-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
            font-weight: 600;
            color: var(--error);
        }

        .modern-alert-icon {
            width: 1.5rem;
            height: 1.5rem;
            flex-shrink: 0;
        }

        .modern-alert-list {
            margin: 0;
            padding-left: 1.5rem;
            color: var(--text);
        }

        .modern-alert-list li {
            margin-bottom: 0.25rem;
        }

        /* Buttons */
        .modern-btn {
            padding: 0.875rem 2rem;
            border-radius: var(--radius-sm);
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .modern-btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            color: white;
        }

        .modern-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(67, 97, 238, 0.3);
        }

        .modern-btn-icon {
            width: 1.25rem;
            height: 1.25rem;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .modern-header-row {
                flex-direction: column;
                align-items: stretch;
            }

            .modern-header-action {
                width: 100%;
            }

            .modern-search-container {
                flex-direction: column;
            }

            .modern-search-button {
                width: 100%;
                justify-content: center;
            }

            .modern-pagination {
                flex-direction: column;
            }

            .modern-pagination-numbers {
                flex-wrap: wrap;
                justify-content: center;
            }
        }
    </style>
}