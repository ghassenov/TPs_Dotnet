@model List<(string GenreName, int MovieCount)>

@{
    ViewData["Title"] = "Top Genres";
}

<div class="modern-container">
    <div class="modern-header-row">
        <div>
            <a href="@Url.Action("Index", "Repository")" class="modern-back-link">‚Üê Retour</a>
            <h1 class="modern-title">üèÜ Top 3 Genres</h1>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="modern-top-genres">
            @for (int i = 0; i < Model.Count; i++)
            {
                var medal = i == 0 ? "ü•á" : i == 1 ? "ü•à" : "ü•â";
                var percentage = Model[0].MovieCount > 0 ? (Model[i].MovieCount * 100) / Model[0].MovieCount : 0;

                <div class="modern-genre-ranking">
                    <div class="modern-rank-medal">@medal</div>
                    <div class="modern-rank-content">
                        <h3 class="modern-rank-name">@Model[i].GenreName</h3>
                        <div class="modern-rank-bar">
                            <div class="modern-rank-fill" style="width: @percentage%"></div>
                        </div>
                        <p class="modern-rank-count">@Model[i].MovieCount films</p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="modern-empty-state">
            <p>Aucun genre trouv√©.</p>
        </div>
    }
</div>

@section Styles {
    <style>
        :root {
            --primary: #4361ee;
            --surface: #ffffff;
            --border: #e2e8f0;
            --text: #1e293b;
            --text-light: #64748b;
            --radius: 12px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --success: #06b6d4;
        }

        .modern-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .modern-back-link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text);
            margin: 0.5rem 0 2rem 0;
        }

        .modern-top-genres {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .modern-genre-ranking {
            display: flex;
            gap: 1.5rem;
            align-items: center;
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 1.5rem;
            box-shadow: var(--shadow);
            transition: all 0.2s ease;
        }

        .modern-genre-ranking:hover {
            transform: translateX(4px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .modern-rank-medal {
            font-size: 3rem;
            min-width: 80px;
            text-align: center;
        }

        .modern-rank-content {
            flex: 1;
        }

        .modern-rank-name {
            margin: 0 0 0.5rem 0;
            color: var(--primary);
            font-size: 1.3rem;
        }

        .modern-rank-bar {
            width: 100%;
            height: 8px;
            background: var(--border);
            border-radius: 4px;
            overflow: hidden;
            margin: 0.75rem 0;
        }

        .modern-rank-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--primary), var(--success));
            border-radius: 4px;
            transition: width 0.5s ease;
        }

        .modern-rank-count {
            margin: 0;
            color: var(--text-light);
            font-size: 0.9rem;
            font-weight: 600;
        }

        .modern-empty-state {
            text-align: center;
            padding: 3rem;
        }
    </style>
}
