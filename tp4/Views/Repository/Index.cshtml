@section Styles {
    <style>
        :root {
            --primary: #4361ee;
            --primary-light: #eef2ff;
            --secondary: #64748b;
            --success: #10b981;
            --surface: #ffffff;
            --background: #f8fafc;
            --border: #e2e8f0;
            --text: #1e293b;
            --text-light: #64748b;
            --radius: 12px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.12);
            --transition: all 0.2s ease;
        }

        .modern-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .modern-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .modern-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .modern-subtitle {
            font-size: 1.1rem;
            color: var(--text-light);
        }

        .modern-stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .modern-stat-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 2rem;
            text-align: center;
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

        .modern-stat-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-hover);
        }

        .modern-stat-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .modern-stat-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text);
            margin: 0.5rem 0;
        }

        .modern-stat-value {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary);
            margin: 1rem 0;
        }

        .modern-stat-link {
            display: inline-block;
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
            margin-top: 1rem;
            transition: var(--transition);
        }

        .modern-stat-link:hover {
            text-decoration: underline;
        }

        .modern-section-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 2rem;
            text-align: center;
        }

        .modern-operations-section,
        .modern-search-section,
        .modern-info-section {
            margin-bottom: 3rem;
        }

        .modern-operations-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .modern-operation-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 1.5rem;
            text-align: center;
            box-shadow: var(--shadow);
        }

        .modern-op-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .modern-operation-card h4 {
            font-size: 1.1rem;
            color: var(--text);
            margin: 0.5rem 0;
        }

        .modern-operation-card p {
            color: var(--text-light);
            font-size: 0.9rem;
            margin: 0.5rem 0 1rem;
        }

        .modern-btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }

        .modern-search-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .modern-search-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 2rem;
            box-shadow: var(--shadow);
        }

        .modern-search-card h4 {
            font-size: 1.2rem;
            color: var(--text);
            margin-bottom: 1rem;
        }

        .modern-form-group {
            margin-bottom: 1rem;
        }

        .modern-input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid var(--border);
            border-radius: 8px;
            font-size: 0.95rem;
        }

        .modern-btn {
            padding: 0.75rem 1.5rem;
            border-radius: var(--radius);
            border: none;
            cursor: pointer;
            font-weight: 600;
            transition: var(--transition);
            text-decoration: none;
            display: inline-block;
        }

        .modern-btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            color: white;
        }

        .modern-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(67, 97, 238, 0.4);
        }

        .modern-btn-secondary {
            background: var(--secondary);
            color: white;
        }

        .modern-btn-secondary:hover {
            background: #475569;
        }

        .modern-info-card {
            background: var(--primary-light);
            border: 1px solid var(--primary);
            border-radius: var(--radius);
            padding: 2rem;
        }

        .modern-info-card h3 {
            color: var(--primary);
            margin-top: 0;
        }

        .modern-info-list {
            list-style: none;
            padding: 0;
        }

        .modern-info-list li {
            padding: 0.5rem 0;
            padding-left: 1.5rem;
            position: relative;
            color: var(--text);
        }

        .modern-info-list li::before {
            content: "‚úì";
            position: absolute;
            left: 0;
            color: var(--primary);
            font-weight: bold;
        }

        .modern-back-section {
            text-align: center;
            margin-top: 3rem;
        }

        @@media (max-width: 768px) {
            .modern-title {
                font-size: 1.8rem;
            }

            .modern-stats-grid,
            .modern-operations-grid,
            .modern-search-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}
