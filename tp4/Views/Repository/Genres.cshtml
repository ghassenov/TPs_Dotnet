@model List<MoviesCrudApp.Models.Genre>

@{
    ViewData["Title"] = "Genres";
}

<div class="modern-container">
    <div class="modern-header-row">
        <div>
            <a href="@Url.Action("Index", "Repository")" class="modern-back-link">‚Üê Retour</a>
            <h1 class="modern-title">üé≠ Genres</h1>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="modern-genres-grid">
            @foreach (var genre in Model)
            {
                <div class="modern-genre-card">
                    <h3 class="modern-genre-name">@genre.Name</h3>
                    <p class="modern-genre-desc">@genre.Description</p>
                    <div class="modern-genre-count">
                        <span class="modern-badge">@genre.Movies?.Count ?? 0 films</span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="modern-empty-state">
            <p>Aucun genre trouv√©.</p>
        </div>
    }
</div>

@section Styles {
    <style>
        :root {
            --primary: #4361ee;
            --surface: #ffffff;
            --border: #e2e8f0;
            --text: #1e293b;
            --text-light: #64748b;
            --radius: 12px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .modern-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .modern-back-link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text);
            margin: 0.5rem 0 2rem 0;
        }

        .modern-genres-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .modern-genre-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 1.5rem;
            box-shadow: var(--shadow);
            transition: all 0.2s ease;
        }

        .modern-genre-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .modern-genre-name {
            margin: 0 0 0.5rem 0;
            color: var(--primary);
            font-size: 1.3rem;
        }

        .modern-genre-desc {
            color: var(--text-light);
            margin: 0 0 1rem 0;
            font-size: 0.9rem;
        }

        .modern-genre-count {
            text-align: center;
        }

        .modern-badge {
            display: inline-block;
            background: var(--primary);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .modern-empty-state {
            text-align: center;
            padding: 3rem;
        }
    </style>
}
