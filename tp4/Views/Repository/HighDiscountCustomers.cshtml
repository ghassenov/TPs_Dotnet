@model List<MoviesCrudApp.Models.Customer>

@{
    ViewData["Title"] = "High Discount Customers";
}

<div class="modern-container">
    <div class="modern-header-row">
        <div>
            <a href="@Url.Action("Index", "Repository")" class="modern-back-link">‚Üê Retour</a>
            <h1 class="modern-title">üíé Clients Premium (R√©duction > 10%)</h1>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="modern-table-wrapper">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>T√©l√©phone</th>
                        <th>Type d'abonnement</th>
                        <th>R√©duction</th>
                        <th>Date d'inscription</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr class="modern-premium-row">
                            <td>@customer.Id</td>
                            <td>
                                <strong>@customer.FirstName @customer.LastName</strong>
                            </td>
                            <td>@customer.Email</td>
                            <td>@customer.Phone</td>
                            <td>
                                <span class="modern-membership-badge">@customer.MembershipType?.Name</span>
                            </td>
                            <td>
                                <span class="modern-premium-discount">@customer.MembershipType?.DiscountRate.ToString("F0")%</span>
                            </td>
                            <td>@customer.RegistrationDate.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="modern-empty-state">
            <p>Aucun client premium trouv√©.</p>
        </div>
    }
</div>

@section Styles {
    <style>
        :root {
            --primary: #4361ee;
            --surface: #ffffff;
            --border: #e2e8f0;
            --text: #1e293b;
            --text-light: #64748b;
            --radius: 12px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --premium: #8b5cf6;
        }

        .modern-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .modern-back-link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text);
            margin: 0.5rem 0 2rem 0;
        }

        .modern-table-wrapper {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            overflow: hidden;
            box-shadow: var(--shadow);
        }

        .modern-table {
            width: 100%;
            border-collapse: collapse;
        }

        .modern-table thead {
            background: linear-gradient(135deg, var(--premium), #6366f1);
            color: white;
        }

        .modern-table th {
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .modern-premium-row {
            border-top: 1px solid var(--border);
            transition: background-color 0.2s ease;
        }

        .modern-premium-row:hover {
            background-color: #faf5ff;
        }

        .modern-table td {
            padding: 1rem;
            color: var(--text);
        }

        .modern-membership-badge {
            display: inline-block;
            background: var(--primary);
            color: white;
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.85rem;
        }

        .modern-premium-discount {
            display: inline-block;
            background: var(--premium);
            color: white;
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            font-weight: 700;
            font-size: 0.9rem;
        }

        .modern-empty-state {
            text-align: center;
            padding: 3rem;
        }
    </style>
}
