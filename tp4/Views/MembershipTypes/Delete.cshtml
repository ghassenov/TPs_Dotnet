@model MembershipType
@using MoviesCrudApp.Models

@{
    ViewData["Title"] = "Supprimer le Type d'Adhésion";
}

<div class="modern-container">
    <div class="modern-card modern-card-danger">
        <div class="modern-card-header modern-card-header-danger">
            <h2 class="modern-card-title">@ViewData["Title"]</h2>
        </div>

        <div class="modern-content">
            <div class="modern-alert modern-alert-warning">
                <div class="modern-alert-header">
                    <svg class="modern-alert-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.694-.833-2.464 0L4.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                    </svg>
                    <span>Attention !</span>
                </div>
                <p>Cette action est irréversible. Êtes-vous sûr de vouloir continuer ?</p>
            </div>

            <div class="modern-delete-details">
                <div class="modern-detail-group">
                    <div class="modern-detail-label">Nom :</div>
                    <div class="modern-detail-value">@Model.Name</div>
                </div>

                <div class="modern-detail-group">
                    <div class="modern-detail-label">Taux de Réduction :</div>
                    <div class="modern-detail-value">@Model.DiscountRate %</div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="modern-detail-group">
                        <div class="modern-detail-label">Description :</div>
                        <div class="modern-detail-value">@Model.Description</div>
                    </div>
                }
            </div>

            <form asp-action="Delete" method="post" class="modern-confirm-form">
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="modern-form-actions modern-form-actions-danger">
                    <button type="submit" class="modern-btn modern-btn-danger">
                        <svg class="modern-btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Supprimer
                    </button>

                    <a asp-action="Index" class="modern-btn modern-btn-secondary">
                        Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Using the same design system */
        :root {
            --primary: #4361ee;
            --primary-light: #eef2ff;
            --secondary: #64748b;
            --success: #10b981;
            --error: #ef4444;
            --warning: #f59e0b;
            --warning-light: #fef3c7;
            --warning-border: #fde68a;
            --danger: #dc2626;
            --danger-light: #fee2e2;
            --surface: #ffffff;
            --background: #f8fafc;
            --border: #e2e8f0;
            --text: #1e293b;
            --text-light: #64748b;
            --radius: 12px;
            --radius-sm: 8px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.12);
            --transition: all 0.2s ease;
        }

        .modern-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .modern-card {
            background: var(--surface);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            overflow: hidden;
            border: 1px solid var(--border);
        }

        .modern-card-danger {
            border-color: var(--danger);
        }

        .modern-card-header {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid var(--border);
        }

        .modern-card-header-danger {
            background: linear-gradient(135deg, var(--danger) 0%, #b91c1c 100%);
            border-bottom: 1px solid var(--danger);
        }

        .modern-card-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: white;
            margin: 0;
        }

        .modern-content {
            padding: 2rem;
        }

        .modern-alert {
            border-radius: var(--radius-sm);
            padding: 1.25rem;
            margin-bottom: 2rem;
        }

        .modern-alert-warning {
            background: linear-gradient(135deg, var(--warning-light) 0%, #fef3c7 100%);
            border: 1px solid var(--warning-border);
        }

        .modern-alert-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: var(--warning);
        }

        .modern-alert-icon {
            width: 1.5rem;
            height: 1.5rem;
        }

        .modern-alert p {
            margin: 0;
            color: var(--text);
            line-height: 1.6;
        }

        .modern-delete-details {
            margin-bottom: 2.5rem;
            padding: 1.5rem;
            background: var(--background);
            border-radius: var(--radius-sm);
            border: 1px solid var(--border);
        }

        .modern-detail-group {
            margin-bottom: 1.5rem;
        }

        .modern-detail-group:last-child {
            margin-bottom: 0;
        }

        .modern-detail-label {
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--text-light);
            margin-bottom: 0.375rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .modern-detail-value {
            font-size: 1.125rem;
            color: var(--text);
            line-height: 1.6;
        }

        .modern-confirm-form {
            margin-top: 2rem;
        }

        .modern-form-actions {
            display: flex;
            gap: 1rem;
            padding-top: 2rem;
            border-top: 1px solid var(--border);
        }

        .modern-form-actions-danger {
            border-top-color: var(--border);
        }

        .modern-btn {
            padding: 0.875rem 2rem;
            border-radius: var(--radius-sm);
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .modern-btn-danger {
            background: linear-gradient(135deg, var(--danger) 0%, #b91c1c 100%);
            color: white;
        }

        .modern-btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(220, 38, 38, 0.3);
        }

        .modern-btn-secondary {
            background: transparent;
            color: var(--text-light);
            border: 2px solid var(--border);
        }

        .modern-btn-secondary:hover {
            background: var(--background);
            border-color: var(--text-light);
        }

        .modern-btn-icon {
            width: 1.25rem;
            height: 1.25rem;
        }

        input[type="hidden"] {
            display: none;
        }

        /* Responsive */
        @@media (max-width: 640px) {
            .modern-container {
                padding: 0 1rem;
            }

            .modern-content {
                padding: 1.5rem;
            }

            .modern-form-actions {
                flex-direction: column;
            }

            .modern-btn {
                width: 100%;
            }

            .modern-card-header {
                padding: 1.25rem 1.5rem;
            }

            .modern-delete-details {
                padding: 1.25rem;
            }
        }
    </style>
}