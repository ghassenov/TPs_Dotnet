                height: 40px;
                padding: 0.5rem;
            }

            .modern-privacy-icon svg {
                width: 20px;
                height: 20px;
            }
        }

        /* Animation */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .modern-privacy-card {
            animation: fadeIn 0.6s ease forwards;
        }

        .modern-privacy-feature {
            animation: fadeIn 0.6s ease forwards;
            animation-delay: calc(var(--i, 0) * 0.1s);
        }
