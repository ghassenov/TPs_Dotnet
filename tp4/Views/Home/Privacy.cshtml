@section Styles {
    <style>
        /* Using the same design system */
        :root {
            --primary: #4361ee;
            --primary-light: #eef2ff;
            --secondary: #64748b;
            --success: #10b981;
            --error: #ef4444;
            --warning: #f59e0b;
            --surface: #ffffff;
            --background: #f8fafc;
            --border: #e2e8f0;
            --text: #1e293b;
            --text-light: #64748b;
            --privacy: #8b5cf6;
            --privacy-light: #f5f3ff;
            --radius: 16px;
            --radius-sm: 8px;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 8px 40px rgba(0, 0, 0, 0.12);
            --transition: all 0.3s ease;
        }

        .modern-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        /* Header */
        .modern-header {
            margin-bottom: 3rem;
            text-align: center;
        }

        .modern-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--text);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--primary) 0%, #3a56d4 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .modern-title-privacy {
            background: linear-gradient(135deg, var(--privacy) 0%, #7c3aed 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .modern-subtitle {
            font-size: 1.25rem;
            color: var(--text-light);
            line-height: 1.6;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Privacy Card */
        .modern-privacy-card {
            background: var(--surface);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 3rem;
            border: 1px solid var(--border);
            transition: var(--transition);
        }

        .modern-privacy-card:hover {
            box-shadow: var(--shadow-hover);
        }

        /* Lead Text */
        .modern-privacy-lead {
            font-size: 1.25rem;
            font-weight: 500;
            color: var(--text);
            line-height: 1.7;
            margin-bottom: 2.5rem;
            padding-bottom: 2rem;
            border-bottom: 2px solid var(--privacy-light);
        }

        /* Content */
        .modern-privacy-content {
            margin-bottom: 3rem;
        }

        .modern-privacy-content p {
            color: var(--text);
            line-height: 1.7;
            margin-bottom: 1.5rem;
            font-size: 1.125rem;
        }

        .modern-privacy-content p:last-child {
            margin-bottom: 0;
        }

        /* Features */
        .modern-privacy-features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
            padding-top: 3rem;
            border-top: 2px solid var(--privacy-light);
        }

        .modern-privacy-feature {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            padding: 1.5rem;
            background: var(--privacy-light);
            border-radius: var(--radius-sm);
            transition: var(--transition);
            border: 1px solid transparent;
        }

        .modern-privacy-feature:hover {
            border-color: var(--privacy);
            transform: translateY(-4px);
            box-shadow: 0 6px 20px rgba(139, 92, 246, 0.15);
        }

        .modern-privacy-icon {
            flex-shrink: 0;
            width: 48px;
            height: 48px;
            border-radius: var(--radius-sm);
            background: linear-gradient(135deg, var(--privacy) 0%, #7c3aed 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            padding: 0.75rem;
        }

        .modern-privacy-icon svg {
            width: 24px;
            height: 24px;
            stroke-width: 2;
        }

        .modern-privacy-feature h4 {
            font-size: 1.125rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 0.375rem;
        }

        .modern-privacy-feature p {
            font-size: 0.875rem;
            color: var(--text-light);
            line-height: 1.5;
            margin: 0;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .modern-title {
                font-size: 2rem;
            }

            .modern-subtitle {
                font-size: 1.125rem;
            }

            .modern-privacy-card {
                padding: 2rem;
            }

            .modern-privacy-lead {
                font-size: 1.125rem;
                margin-bottom: 2rem;
                padding-bottom: 1.5rem;
            }

            .modern-privacy-content p {
                font-size: 1rem;
            }

            .modern-privacy-features {
                grid-template-columns: 1fr;
                gap: 1rem;
                margin-top: 2rem;
                padding-top: 2rem;
            }

            .modern-privacy-feature {
                padding: 1.25rem;
            }
        }

        @@media (max-width: 480px) {
            .modern-title {
                font-size: 1.75rem;
            }

            .modern-privacy-card {
