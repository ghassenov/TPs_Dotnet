        .modern-btn-secondary {
            background: linear-gradient(135deg, #64748b 0%, #475569 100%);
            color: white;
        }

        .modern-btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(100, 116, 139, 0.3);
        }

        .modern-services-card {
            border-color: #64748b;
            border: 2px solid #64748b;
        }

        .modern-repository-card {
            border-color: #8b5cf6;
            border: 2px solid #8b5cf6;
        }

        .modern-btn-repository {
            background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
            color: white;
        }

        .modern-btn-repository:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(139, 92, 246, 0.3);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .modern-hero {
                padding: 2rem 1rem;
            }

            .modern-hero-title {
                font-size: 2rem;
            }

            .modern-hero-subtitle {
                font-size: 1.125rem;
            }

            .modern-dashboard-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .modern-dashboard-card {
                padding: 2rem 1.5rem;
            }
        }

        @@media (max-width: 480px) {
            .modern-hero-title {
                font-size: 1.75rem;
            }

            .modern-hero-subtitle {
                font-size: 1rem;
            }
        }

        /* Animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .modern-dashboard-card {
            animation: fadeInUp 0.5s ease forwards;
        }

        .modern-dashboard-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .modern-dashboard-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .modern-dashboard-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .modern-dashboard-card:nth-child(4) {
            animation-delay: 0.4s;
        }

        .modern-dashboard-card:nth-child(5) {
            animation-delay: 0.5s;
        }
    </style>
}